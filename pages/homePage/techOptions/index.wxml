<!--index.wxml-->
<scroll-view class="scrollview" scroll-y type="list">
  <view class="container">
    <van-cell-group inset>
      <van-cell title="持续接单">
        <van-switch style="height: 24px;" slot="right-icon" checked="{{ userInfo.available }}"
          bind:change="onToggleAvalable" size="40rpx" />
      </van-cell>
      <van-cell title="启用QQ号">
        <van-switch disabled style="height: 24px;" slot="right-icon" checked="{{ hasQQ }}" bind:change="onToggleQQ"
          size="40rpx" />
      </van-cell>
      <van-field center disabled="{{ !hasQQ }}" type="digit" name="qq" label="QQ号" placeholder="请输入你的QQ号"
        value="{{ userInfo.qq }}" border="{{ false }}" bind:change="onQQChange">
        <view class="material-icons" slot="right-icon"> mail </view>
      </van-field>
      <!-- TODO Project -->
      <!--
