          bind:cancel="closePopup" />
      </block>
    </van-popup>
    -->
    <view class="btn-container">
      <van-button round icon="save" class-prefix="material-icons" type="info" bind:click="saveOptions">
        保存
      </van-button>
    </view>
    <van-toast id="van-toast" />
  </view>
</scroll-view>
