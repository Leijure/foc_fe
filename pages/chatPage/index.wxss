/* pages/chatPage/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.content {
  flex: 1;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.clickable-icon {
  vertical-align: middle;
}

/* wechat dialog */

.wechat-content {
  padding: 22rpx;
  padding-bottom: 100rpx;
}

.wechat-dialog {
  margin-bottom: 31.25rpx;
  position: relative;
  display: flex;
}

.wechat-dialog-face {
  width: 76.875rpx;
  height: 76.875rpx;
  background: #f1f1f1;
  border-radius: 9.375rpx;
  background-size: contain;
  background-repeat: no-repeat;
  position: absolute;
  background-position: center;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-dialog-face image {
  display: block;
  width: 76.875rpx;
  height: 76.875rpx;
}

.wechat-dialog-right {
  justify-content: flex-end;
}

.wechat-dialog-right .wechat-dialog-face {
  right: 0;
}

.wechat-dialog-text {
  background: #fff;
  padding: 17.5rpx 23.75rpx;
  font-size: 30rpx;
  border-radius: 9.375rpx;
  margin-right: 87.5rpx;
  word-break: break-all;
  margin-left: 100rpx;
  display: inline-block;
  position: relative;
  line-height: normal;
  min-height: 40rpx;
}

.wechat-dialog-right .wechat-dialog-text {
  background: #98e970;
  margin-left: 87.5rpx;
  margin-right: 100rpx;
}

.wechat-dialog-text:after {
  content: "";
  background: #fff;
  width: 15rpx;
  height: 15rpx;
  border-bottom-left-radius: 2.5rpx;
  top: 31.25rpx;
  left: -7.5rpx;
  position: absolute;
  transform: rotate(45deg);
}

.wechat-dialog-right .wechat-dialog-text:after {
  background: #98e970;
  left: auto;
  right: -6.25rpx;
  border-top-right-radius: 2.5rpx;
  border-bottom-left-radius: 0;
}

/* 暗黑模式 */
@media (prefers-color-scheme: dark) {
  .wechat-content {
    color: #1f1f1f;
  }
}
